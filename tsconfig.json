{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "types": ["node", "jest"]
  },
  "include": ["cli/**/*", "scanner/**/*", "reporters/**/*", "src/**/*", "lib/**/*", "tests/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "poc/**/*",
    "demo-examples/**/*",
    "demo-automation/**/*",
    "benchmark-results/**/*",
    "tests/mcp/fixtures/**/*"
  ]
}

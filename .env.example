# VibeSec Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===================================
# Error Monitoring (Sentry)
# ===================================

# Sentry DSN (Data Source Name)
# For cloud-hosted: https://xxx@o123456.ingest.sentry.io/7654321
# For self-hosted: https://xxx@your-sentry-host.com/1
SENTRY_DSN=

# Environment name (development, staging, production)
NODE_ENV=development

# VibeSec version (for release tracking)
VIBESEC_VERSION=1.0.0

# Sentry performance monitoring sample rates (0.0 to 1.0)
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# ===================================
# Logging
# ===================================

# Log level (debug, info, warn, error, fatal)
LOG_LEVEL=info

# Path for exported logs (optional)
LOG_EXPORT_PATH=./logs

# ===================================
# Metrics & Monitoring
# ===================================

# Enable metrics collection
ENABLE_METRICS=true

# Port for Prometheus metrics endpoint (if running as a service)
METRICS_PORT=9090

# ===================================
# GitHub Integration (Optional)
# ===================================

# GitHub Personal Access Token (for issue tracking, PR management)
GITHUB_PERSONAL_ACCESS_TOKEN=

# ===================================
# Database (Optional - for future features)
# ===================================

# Database connection URL
# DATABASE_URL=postgresql://user:password@localhost:5432/vibesec

# ===================================
# Conexus (Optional - if using local knowledge graph)
# ===================================

# Path to Conexus database
CONEXUS_DB_PATH=

# ===================================
# Development Settings
# ===================================

# Enable debug mode
DEBUG=false

# Enable verbose logging
VERBOSE=false

# Cache directory
CACHE_DIR=.vibesec-cache

# ===================================
# Security Settings
# ===================================

# Maximum file size to scan (in bytes, default: 10MB)
MAX_FILE_SIZE=10485760

# Request timeout (in milliseconds)
REQUEST_TIMEOUT=30000

# ===================================
# Performance Settings
# ===================================

# Number of concurrent file scans
CONCURRENCY=4

# Cache TTL (in seconds, default: 24 hours)
CACHE_TTL=86400

# ===================================
# Self-Hosted Sentry Configuration
# ===================================

# If using self-hosted Sentry, set this to your Sentry instance URL
# Example: https://sentry.your-domain.com
SENTRY_HOST=

# Sentry access token (for MCP server integration)
SENTRY_ACCESS_TOKEN=

# VibeSec Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===================================
# API Keys & Integration
# ===================================

# Dev.to API key for publishing articles
DEV_TO_API_KEY=

# ===================================
# Sentry Configuration (Self-hosted)
# ===================================

# Sentry access token for API access
SENTRY_ACCESS_TOKEN=
# Sentry host URL (without protocol)
SENTRY_HOST=sentry.fergify.work
# GitHub personal access token
GITHUB_PERSONAL_ACCESS_TOKEN=
# Context7 API key
CONTEXT7_API_KEY=

# ===================================
# Conexus MCP Server (Optional)
# ===================================

CONEXUS_PATH=/home/f3rg/src/github/conexus
CONEXUS_DB_PATH=/home/f3rg/src/github/conexus/data/conexus.db

# ===================================
# VibeSec Error Monitoring (Sentry)
# ===================================

# Sentry DSN (Data Source Name) - Self-hosted instance
# Format: https://<key>@<host>/<project-id>
SENTRY_DSN=https://YOUR_KEY_HERE@sentry.fergify.work/14

# Environment name (development, staging, production)
NODE_ENV=development

# VibeSec version (for release tracking)
VIBESEC_VERSION=1.0.0

# Sentry performance monitoring sample rates (0.0 to 1.0)
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# ===================================
# Logging
# ===================================

# Log level (debug, info, warn, error, fatal)
LOG_LEVEL=info

# ===================================
# Metrics & Monitoring
# ===================================

# Enable metrics collection
ENABLE_METRICS=true

{
  "name": "vibesec",
  "version": "0.1.0",
  "description": "Security scanner for AI-generated code - detects vulnerabilities in vibe-coded projects",
  "main": "dist/index.js",
  "bin": {
    "vibesec": "./dist/cli/index.js",
    "vibesec-mcp": "./bin/vibesec-mcp"
  },
  "scripts": {
    "build": "tsc && node copy-assets.js",
    "build:bun": "tsc && bun copy-assets.js",
    "dev": "bun run cli/index.ts",
    "mcp": "bun run bin/vibesec-mcp",
    "test": "jest",
    "test:bun": "bun test",
    "test:coverage": "jest --coverage",
    "test:mcp": "jest tests/mcp",
    "benchmark": "bun --expose-gc run scripts/run-benchmarks.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "scan": "bun run cli/index.ts scan"
  },
  "keywords": [
    "security",
    "scanner",
    "ai-code",
    "vulnerability",
    "static-analysis",
    "sast"
  ],
  "author": "VibeSec Team",
  "license": "MIT",
  "dependencies": {
    "@sentry/bun": "^10.20.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "fast-glob": "^3.3.2",
    "js-yaml": "^4.1.0",
    "ora": "6.3.1",
    "web-tree-sitter": "^0.25.10"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.20",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "bun": ">=1.0.0"
  }
}
